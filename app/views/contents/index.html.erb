<section class="content-header">
  <h1>Listing:
    <small>Content</small>
  </h1>

  <ol class="breadcrumb">
    <li>
      <%= link_to authenticated_root_path do %>
        <i class="fa fa-dashboard"></i>
        Home
      <% end %>
    </li>
    <li>
      <%= link_to publishers_path do %>
        <i class="glyphicon glyphicon-briefcase"></i>
        Publishers
      <% end %>
    </li>
    <li class="active">Content</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_content_path, class: 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Content
            <% end %>
          </div>
          <div class="box-tools pull-left">
            <%= form_tag contents_path, method: :get, class: "navbar-form navbar-left search-form" do %>
              <%= text_field_tag(
                  :search,
                  params[:search],
                  placeholder: "Search",
                  class: "form-control"
              ) %>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <table class="display responsive no-wrap" id="content_table">
            <thead>
              <tr>
                <th class="row-config">Publisher</th>
                <th class="row-config">Title</th>
                <th class="row-config">Author</th>
                <th class="row-config">e-isbn</th>
                <th class="row-config">Availability</th>
                <th class="row-config">Price GBP</th>
                <th class="row-config">Price EUR</th>
                <th class="row-config">Price USD</th>
                <th class="th-col-span" colspan="3">Actions</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
