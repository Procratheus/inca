<section class="content-header">
  <h1>Listing: <small>Content</small></h1>

  <ol class="breadcrumb">
    <li>
      <%= link_to authenticated_root_path do %>
        <i class="fa fa-dashboard"></i> 
        Home
      <% end %>
    </li>
    <li>
      <%= link_to publishers_path do %>
        <i class="glyphicon glyphicon-briefcase"></i> 
        Publishers
      <% end %>
    </li>
    <li class="active">Content</li>
  </ol>    
</section>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_content_path, class: 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Content
            <% end %>          
          </div>
        </div>
        <div class="box-body">
          <table class="table table-striped table-bordered table-hover" id="content_table">
            <thead>
              <tr>
                <th>Publisher</th>
                <th>Content Image</th>
                <th>Title</th>
                <th>Author</th>
                <th>e-isbn</th>
                <th>Availability</th>
                <th>Price GBP</th>
                <th>Price EUR</th>
                <th>Price USD</th>
                <th class="th-col-span" colspan="3">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @contents.each do |content| %>
                <% cache content do %>
                  <tr>
                    <td><%= content.publisher_name %></td>
                    <td><%= image_tag content.content_image, width: 40, height: 40 %></td> 
                    <td><%= content.title %></td>
                    <td><%= content.author %></td>
                    <td><%= content.e_isbn %></td>
                    <td><%= content.availability %></td>
                    <td><%= content.price_gbp %></td>
                    <td><%= content.price_eur %></td>
                    <td><%= content.price_usd %></td>
                    <td class="th-col-span">
                      <% if policy(content).show? %>
                        <%= link_to content do %>                      
                          <i class="fa fa-book"></i>
                        <% end %>
                      <% end %>
                    </td>
                    <td class="th-col-span">
                      <% if policy(content).edit? %>
                        <%= link_to edit_content_path(content) do %>
                          <i class="glyphicon glyphicon-pencil"></i>
                        <% end %>
                      <% end %>
                    </td>
                    <td class="th-col-span">
                      <% if policy(content).destroy? %>
                        <%= link_to content_path(content), method: :delete, data: { confirm: "Are you sure?" } do %>
                          <i class="glyphicon glyphicon-remove"></i>
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>