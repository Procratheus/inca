<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <% if policy(@publisher).new? %>
        <%= form_for @publisher do |f| %>
          <% if @publisher.errors.any? %>
            <div class="alert alert-danger alert-dismissable" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
              <h4><%= pluralize(@publisher.errors.count, "error") %> prohibited this User from being updated:</h4>

              <ul>
              <% @publisher.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control text-area", placeholder: "Enter name" %>
          </div>
          <div class="form-group">
            <%= f.label :address %>
            <%= f.text_area :address, class: "form-control text-area", placeholder: "Enter address", rows: "15" %>
          </div>
          <div class="form-group">
            <%= f.label :contract_start_date %>
            <%= f.date_field :contract_start_date %>
          </div>
          <div class="form-group">
            <%= f.label :contract_end_date %>
            <%= f.date_field :contract_end_date %>
          </div>
          <div class="form-group">
            <%= f.button class: "btn btn-md btn-primary", data: { disable_with: "<i class='fa fa-spinner'></i>Updating......" } do %>
              <% if @publisher.name %>
                Update
              <% else %>
                Create
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% end %>
      <%= link_to "back", :back %>
    </div>
  </div>
</section> 