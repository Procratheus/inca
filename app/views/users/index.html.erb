<section class="content-header">
  <h1>Listing: <small>Users</small></h1>

  <ol class="breadcrumb">
    <li>
      <%= link_to authenticated_root_path do %>
        <i class="fa fa-dashboard"></i> 
        Home
      <% end %>
    </li>
    <li class="active">Users</li>
  </ol>    
</section>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_user_invitation_path, class: 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New user
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-striped table-hover table-condensed dataTable" id="user_table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Created at</th>
                <th>Last Login</th>
                <th>Confirmed_at</th>
                <th>Admin?</th>
                <th class="th-col-span" colspan="3">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.created_at %></td>
                  <td><%= user.last_sign_in_at %></td>
                  <td><%= user.confirmed_at %></td>
                  <td><%= user.roles %></td>
                  <td class="th-col-span">
                    <%= link_to user do %>                      
                      <i class="glyphicon glyphicon-user"></i>
                    <% end %>
                  </td>
                  <td class="th-col-span">
                    <%= link_to edit_user_path(user) do %>
                      <i class="glyphicon glyphicon-pencil"></i>
                    <% end %>
                  </td>
                  <td class="th-col-span">
                    <%= link_to user_path(user), method: :delete, data: { confirm: "Are you sure?" } do %>
                      <i class="glyphicon glyphicon-remove"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>