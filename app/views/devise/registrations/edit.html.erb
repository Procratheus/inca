<div class="container" style="margin-top:40px">
  <div class="row">
    <div class="panel-heading">
      <p><b>User Details</b></p>
    </div>
      <div class="row">
        <div class="col-sm-12 col-md-10  col-md-offset-1 ">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-user"></i>
                </span> 
                <%= f.text_field :name, autofocus: true, placeholder: "Enter your name", class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-envelope"></i>
                </span> 
                <%= f.email_field :email, placeholder: "Enter your email", class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <i>(leave blank if you don't want to change it)</i><br />
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-lock"></i>
                </span>
                <%= f.password_field :password, autocomplete: "off", placeholder: "Enter your password", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-lock"></i>
                </span>
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm your password", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <%= image_tag attachment_url(@user, :profile_image, :fill, 45, 45) %>
              <div class="input-group">
                <%= f.attachment_field :profile_image, direct: true %>
                <div id="file-loading"></div>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <%= f.check_box :remove_profile_image %>
                <i>Remove the profile image</i>
              </div>
            </div>
            <div class="form-group">
              <i>(we need your current password to confirm your changes)</i><br />
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-lock"></i>
                </span>
                <%= f.password_field :current_password, autocomplete: "off", placeholder: "Confirm your password", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
               <%= f.button "Update", class: "btn btn-md btn-primary", data: { disable_with: "<i class='fa fa-spinner'></i>Updating......." } %>
            </div> 
          <% end %>
            <div class="form-group">
              <%#= render "devise/shared/links" %><!-- </br> -->
              <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-md btn-warning",data: { confirm: "Are you sure?" }, method: :delete %></p>
              <%= link_to "Back", :back %>
            </div>       
          </div>
      </div>
  </div>
</div>


