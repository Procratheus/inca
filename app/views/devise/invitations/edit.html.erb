<div class="container" style="margin-top:40px">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <p><b><%= t 'devise.invitations.edit.header' %></b></p>
        </div>
        <div class="panel-body">
          <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :invitation_token %>
            <fieldset>
              <div class="row">
                <div class="center-block">
                  <img class="profile-img"
                    src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/30/Inca_head.svg/299px-Inca_head.svg.png" alt="Inca Head">
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                      </span> 
                      <%= f.text_field :name, autofocus: true, placeholder: "Enter your name", class: "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                      </span>
                      <%= f.password_field :password, autocomplete: "off", placeholder: "Enter your password", class: "form-control"%>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                      </span>
                      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm your password", class: "form-control"%>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <%= image_tag attachment_url(@user, :profile_image, :fill, 45, 45) %>
                      </span>
                      <%= f.attachment_field :profile_image %>
                    </div>
                  </div>
                  <div class="form-group">
                    <i>Remove the profile image</i>
                    <div class="input-group">
                      <span class="input-group-addon">
                        <%= image_tag attachment_url(@user, :profile_image, :fill, 45, 45) %>
                      </span>
                      <%= f.check_box :remove_profile_image %>
                    </div>
                  </div>
                  <div class="form-group">
                     <%= f.button "Create", class: "btn btn-lg btn-primary btn-block", data: { disable_with: "<i class='fa fa-spinner'></i>Creating......" } %>
                  </div>
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </fieldset>  
          <% end %>     
        </div>
      </div>
    </div>
  </div>
</div>

