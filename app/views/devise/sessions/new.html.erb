<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>
      <h1 class="logo-name">Inca</h1>
    </div>
    <h3>Welcome to Project Inca</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Enter your email", class: "form-control", required: "" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Enter your password", class: "form-control", required: "" %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <%= f.button "Log in", class: "btn btn-primary block full-width m-b", data: { disable_with: "<i class='fa fa-spinner'></i>Logging in......." } %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
